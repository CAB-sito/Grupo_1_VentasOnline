<section class="detalle_producto">
  <div class="ima-y-nom">
    <img class="img-prod" src="/images/<%= producto.imagen %>" alt="" />
    <p class="nom-del-producto"><%= producto.name %></p>
  </div>
  <div class="descripcion">
    <p>Marca: Lines</p>
    <p>Color <i class="fa-solid fa-circle"></i></p>
    <p class="precio">$<%= producto.precio %></p>
    <form action="/producto" method="post">
      <div class="talle">
        <label> Talle </label>
        <select name="talle" id="talle">
          <option value="36">1</option>
          <option value="38">2</option>
          <option value="40">3</option>
          <option value="42">4</option>
          <option value="44">5</option>
          <option value="46">6</option>
        </select>
      </div>
    </form>

    <form action="/producto" method="post">
      <div class="cantidad">
        <label for="cantidad">Cantidad </label>
        <input type="text" name="cantidad" id="cantidad" placeholder="1" />
      </div>
    </form>
    <p>Stock Disponible</p>
    <div>
      <button class="button_añadir">AÑADIR AL CARRITO</button>
    </div>
  </div>
</section>
