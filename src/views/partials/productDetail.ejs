<section class="detalle_producto">
  <div class="ima-y-nom">
    <img class="img-prod" src="/images/products/<%= producto.image %>" alt="" />
    <p class="nom-del-producto"><%= producto.nombre %></p>
  </div>
  <div class="descripcion">
    <p>Marca: <%= producto.marca %></p>
    <p>Color <i class="fa-solid fa-circle"></i></p>
    <p class="precio">$<%= producto.precio %></p>
    <form action="/producto" method="post">
      <div class="talle">
        <label> Talle </label>
        <select name="talle" id="talle">
          <option value="xs">XS</option>
          <option value="s">S</option>
          <option value="m">M</option>
          <option value="l">L</option>
          <option value="xl">XL</option>
          <option value="xxl">XXL</option>
        </select>
      </div>
   </form>

    <form action="/producto" method="post">
      <div class="cantidad">
        <label for="cantidad">Cantidad </label>
        <input
          type="number"
          min="1"
          name="cantidad"
          id="cantidad"
          placeholder="1"
        />
      </div>
    </form>
    <p>Stock Disponible</p>
    <div>
      <button class="button_añadir">AÑADIR AL CARRITO</button>
    </div>
  </div>
</section>
